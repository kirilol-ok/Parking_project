<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.parkinggui.PaymentController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="150.0" layoutY="50.0" prefWidth="300.0">
            <children>
                <Label text="Opłata za przekroczony czas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label text="Pozostały czas parkowania:" />
                <Label fx:id="remainingTimeLabel" style="-fx-font-size: 14px;" />
                <Label text="Kwota do zapłaty:" />
                <Label fx:id="paymentAmountLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                <Button text="Zapłać" fx:id="payButton" prefWidth="200.0" />
                <Label fx:id="confirmationLabel" textFill="green" visible="false" />
                <Label fx:id="errorLabel" textFill="red" visible="false" />
            </children>
        </VBox>
    </children>
</AnchorPane>
